<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_10sdp"
    app:cardElevation="@dimen/_10sdp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">


        <ImageView
            android:id="@+id/imageGallery"
            android:layout_width="@dimen/_75sdp"
            android:layout_height="@dimen/_43sdp"
            android:src="@drawable/ic_gallery"
            android:layout_marginBottom="@dimen/_17sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />


        <TextView
            android:id="@+id/textExperienceTitle"
            android:layout_width="@dimen/_150sdp"
            android:maxLines="1"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/front_end_developer"
            android:textColor="@color/deepNavyBlue"
            android:textSize="@dimen/_13ssp"
            app:layout_constraintStart_toEndOf="@+id/imageGallery"
            app:layout_constraintTop_toTopOf="@id/imageGallery" />


        <TextView
            android:id="@+id/textCompanyName"
            android:layout_width="@dimen/_150sdp"
            android:maxLines="1"
            android:fontFamily="@font/roboto"
            android:textColor="#555555"
            android:layout_height="wrap_content"
            android:text="@string/head_field_solution_pvt"
            app:layout_constraintStart_toEndOf="@+id/imageGallery"
            app:layout_constraintTop_toBottomOf="@id/textExperienceTitle" />

     <TextView
            android:id="@+id/textDate"
            android:layout_width="@dimen/_162sdp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:fontFamily="@font/roboto"
            android:textColor="#555555"
            android:text="@string/_2019_05_29_2024_08_22_noida_india"
            app:layout_constraintTop_toBottomOf="@id/textCompanyName"
            app:layout_constraintStart_toEndOf="@+id/imageGallery"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/_40sdp"
            android:textSize="@dimen/_10ssp"/>

        <ImageView
            android:id="@+id/imageEdit"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/ic_three_dots"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/imageGallery"
            android:layout_marginEnd="@dimen/_10sdp"
            tools:ignore="ContentDescription" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
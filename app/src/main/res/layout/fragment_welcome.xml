<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragment.authfragment.welcomeFragment.WelcomeFragment">


  

    <TextView
        android:id="@+id/textWelcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_80sdp"
        android:fontFamily="@font/lato_bold"
        android:text="@string/welcome_to"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/_28ssp"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageComproIcon"
        android:layout_width="@dimen/_110sdp"
        android:layout_height="@dimen/_50sdp"
        android:src="@drawable/compro_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textWelcome"
        tools:ignore="ContentDescription" />


    <ImageView
        android:id="@+id/imageWelcome"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_205sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:src="@drawable/welcome_icon"
        app:layout_constraintTop_toBottomOf="@+id/imageComproIcon"
        tools:ignore="ContentDescription" />


    <RelativeLayout
        android:id="@+id/rlSignIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_20sdp"
        android:layout_marginHorizontal="@dimen/_25sdp"
        android:background="@drawable/blue_line_bg"
        app:layout_constraintBottom_toTopOf="@+id/rlSignUp">


        <TextView
            android:id="@+id/textSignIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:paddingVertical="@dimen/_10sdp"
            android:fontFamily="@font/lato"
            android:text="@string/sign_in"
            android:textColor="@color/blueTextColor"
            android:textSize="@dimen/_18ssp" />

        <ImageView
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_22sdp"
            android:src="@drawable/arrow_right_icon"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_centerVertical="true"
            tools:ignore="ContentDescription" />

    </RelativeLayout>




    <RelativeLayout
        android:id="@+id/rlSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="@dimen/_25sdp"
        android:layout_marginBottom="@dimen/_80sdp"
        android:background="@drawable/blue_line_bg">


        <TextView
            android:id="@+id/textSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:paddingVertical="@dimen/_10sdp"
            android:text="@string/sign_up"
            android:fontFamily="@font/lato"
            android:textColor="@color/blueTextColor"
            android:textSize="@dimen/_18ssp" />

        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_22sdp"
            android:src="@drawable/arrow_right_icon"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_centerVertical="true"
            tools:ignore="ContentDescription" />

    </RelativeLayout>






</androidx.constraintlayout.widget.ConstraintLayout>